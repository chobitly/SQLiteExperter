<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar" />

    <style name="AppTheme" parent="AppBaseTheme">
        <!--ActionBar的颜色-->
        <item name="android:colorPrimary">@color/theme_primary_color</item>
        <!--顶部通知栏颜色-->
        <item name="android:colorPrimaryDark">@color/theme_primary_dark_color</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/theme_primary_color</item>
        <!--重点控件颜色（在不指定colorControlActivated时似乎能够代替那个参数的效果）-->
        <item name="android:colorAccent">@color/theme_accent_color</item>
        <!--多彩控件平常的颜色-->
        <item name="android:colorControlNormal">@color/theme_secondary_color</item>
        <!--多彩控件激活时的颜色（Checkbox等控件的选中颜色，Tab的默认Indicator也会变成这个颜色）-->
        <item name="android:colorControlActivated">@color/theme_secondary_light_color</item>
        <!--控件波纹效果的颜色-->
        <item name="android:colorControlHighlight">@color/theme_secondary_light_color</item>
    </style>

    <style name="FloatingActionButton" parent="android:Widget.ImageButton">
        <item name="android:layout_width">@dimen/activity_fab_size</item>
        <item name="android:layout_height">@dimen/activity_fab_size</item>
        <item name="android:layout_marginRight">@dimen/activity_fab_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_fab_vertical_margin</item>
        <item name="android:src">@drawable/ic_export</item>
        <item name="android:background">@drawable/fab_ripple</item>
        <item name="android:elevation">@dimen/activity_fab_elevation</item>
    </style>
</resources>
